{
  "name": "tcvscodeide",
  "displayName": "TCVSCodeIDE",
  "description": "This extension is meant to closely integrate the Topcoder platform with the text editors, to allow the user to perform actions from within the editor, without having to open a browser.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Topcoder Workflow",
      "properties": {
        "TCVSCodeIDE.credentials.username": {
          "type": "string",
          "default": "",
          "description": "Your Topcoder username."
        },
        "TCVSCodeIDE.credentials.password": {
          "type": "string",
          "default": "",
          "description": "Your Topcoder password."
        }
      }
    },
    "commands": [
      {
        "command": "extension.login",
        "title": "Login",
        "category": "Topcoder"
      },
      {
        "command": "extension.logout",
        "title": "Logout",
        "category": "Topcoder"
      },
      {
        "command": "extension.viewOpenChallenges",
        "title": "View open challenges",
        "category": "Topcoder"
      },
      {
        "command": "extension.uploadSubmmission",
        "title": "Upload submission",
        "category": "Topcoder"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "topcoder",
          "title": "TOPCODER",
          "icon": "media/Logo.svg"
        }
      ]
    },
    "views": {
      "topcoder": [
        {
          "id": "topcoder-active-contests",
          "name": "YOUR ACTIVE CONTESTS"
        },
        {
          "id": "topcoder-active-submissions",
          "name": "YOUR ACTIVE SUBMISSIONS"
        },
        {
          "id": "topcoder-home",
          "name": "HOME"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.132",
    "@types/mocha": "^2.2.42",
    "@types/nock": "^10.0.3",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "chai": "^4.2.0",
    "glob": "^7.1.4",
    "mocha": "^4.1.0",
    "nock": "^10.0.6",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "@topcoder-platform/topcoder-submission-api-wrapper": "^1.1.0",
    "@types/archiver": "^3.0.0",
    "archiver": "^3.0.0",
    "axios": "^0.19.0",
    "ignore": "^5.1.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "topcoder-api-utils": "github:cwdcwd/topcoder-api-utils"
  }
}